{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://maemulhub/docs/schemas/schedule.schema.json",
  "type": "object",
  "required": ["title", "category", "date"],
  "properties": {
    "id": {"type": "string"},
    "title": {"type": "string", "minLength": 2, "maxLength": 100},
    "category": {"enum": ["tour", "contract", "inspection", "expiry", "other"]},
    "date": {"type": "string", "format": "date"},
    "time": {"type": "string", "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"},
    "related_entity": {"type": "object", "properties": {"type": {"type": "string"}, "id": {"type": "string"}}},
    "assignee": {"type": "string"},
    "reminders": {"type": "array", "items": {"type": "integer", "minimum": 5, "maximum": 10080}},
    "notes": {"type": "string"}
  },
  "additionalProperties": true
}
