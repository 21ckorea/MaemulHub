{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://maemulhub/docs/schemas/property.schema.json",
  "type": "object",
  "required": ["type", "address", "status"],
  "properties": {
    "id": {"type": "string"},
    "type": {"enum": ["apartment", "officetel", "store", "land", "multifamily", "villa"]},
    "address": {"type": "string", "minLength": 5, "maxLength": 200},
    "geo": {"type": "object", "properties": {"lat": {"type": "number", "minimum": -90, "maximum": 90}, "lng": {"type": "number", "minimum": -180, "maximum": 180}}, "required": ["lat", "lng"], "additionalProperties": false},
    "complex_name": {"type": "string"},
    "area_supply": {"type": "number", "exclusiveMinimum": 0},
    "area_exclusive": {"type": "number", "exclusiveMinimum": 0},
    "floor": {"type": "integer", "minimum": -5, "maximum": 200},
    "rooms": {"type": "integer", "minimum": 0, "maximum": 20},
    "baths": {"type": "integer", "minimum": 0, "maximum": 20},
    "built_year": {"type": "integer", "minimum": 1900, "maximum": 2099},
    "parking": {"oneOf": [{"enum": ["none", "available"]}, {"type": "integer", "minimum": 0}]},
    "deal_type": {"enum": ["sale", "jeonse", "monthly", "lease", "rent"]},
    "price": {"type": "integer", "minimum": 0},
    "deposit": {"type": "integer", "minimum": 0},
    "rent": {"type": "integer", "minimum": 0},
    "available_from": {"type": "string", "format": "date"},
    "maintenance_fee": {"type": "integer", "minimum": 0},
    "includes": {"type": "array", "items": {"type": "string", "maxLength": 20}, "maxItems": 20},
    "status": {"enum": ["draft", "review", "published", "in_contract", "closed"]},
    "assignee": {"type": "string"},
    "tags": {"type": "array", "items": {"type": "string", "minLength": 2, "maxLength": 20}, "maxItems": 20},
    "owner_contact": {"type": "string"},
    "public_data_snapshots": {"type": "object"},
    "created_at": {"type": "string", "format": "date-time"},
    "updated_at": {"type": "string", "format": "date-time"}
  },
  "additionalProperties": true
}
